    "react": "^19",
    "react-dom": "^19",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "typescript": "^5.8.3"
  }
}
